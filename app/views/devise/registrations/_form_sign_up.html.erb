<%= form_for(resource, as: resource_name, url: register_path) do |form| %>
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "ошибка") %> в форме:</h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_item">
    <%= form.text_field :first_name, placeholder: "First Name*" %>
  </div>

  <div class="form_item">
    <%= form.text_field :last_name, placeholder: "Last Name*" %>
  </div>

  <div class="form_item">
    <%= form.date_field :birth_date, title: "Date of birth" %>
  </div>

  <div class="form_item">
    <%= form.email_field :email, placeholder: "Email*" %>
  </div>

  <div class="form_item">
    <%= form.password_field :password, placeholder: "Password*" %>
  </div>

  <div class="form_item">
    <%= form.submit "ЗАРЕЄСТРУВАТИСЬ", class: "btn"%>
  </div>
<% end %>
